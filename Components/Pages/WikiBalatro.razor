@page "/wikibalatro"
@using AntDesign

<h2>Wiki Balatro</h2>
<br />

@if (!string.IsNullOrEmpty(Sections[0]?.SectionName))
{
    <br />
    <div style="grid-column: span 4; width: 100%;">
        <h4>@Sections[0].SectionName</h4>
    </div>
    <br />
}
<AntList Grid="grid" DataSource="@Sections[0].Items">
    <ListItem>
            <Card Bordered Title="@context.Title" Class="card-avec-image">
                <Body>
                @switch (context.Title)
                {
                    case "Hand":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Hand.png" />
                        </a>
                        break;

                    case "Deck":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Deck.png" />
                        </a>
                        break;

                    case "Card":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Card.png" />
                        </a>
                        break;

                    case "Joker":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Joker.png" />
                        </a>
                        break;

                    case "Blind":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Blind.jfif" />
                        </a>
                        break;

                    case "Tag":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Tag.jfif" />
                        </a>
                        break;
                }
                </Body>
            </Card>
    </ListItem>
</AntList>

@if (!string.IsNullOrEmpty(Sections[1]?.SectionName))
{
    <br />
    <div style="grid-column: span 4; width: 100%;">
        <h4>@Sections[1].SectionName</h4>
    </div>
    <br />
}
<AntList Grid="grid" DataSource="@Sections[1].Items">
    <HeadContent>

    </HeadContent>

    <ListItem>
            <Card Bordered Title="@context.Title" Class="card-avec-image">
                <Body>
                @switch (context.Title)
                {
                    case "Booster Pack":
                        <a href="@context.Link" style="color: white">
                            <Image Width="55px" Src="images/ConceptImages/Boosterpack.jfif" />
                        </a>
                        break;

                    case "Consumable Cards":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Tarot.png" />
                        </a>
                        break;

                    case "Seal":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Seal.png" />
                        </a>
                        break;

                    case "Voucher":
                        <a href="@context.Link" style="color: white">
                            <Image Width="55px" Src="images/ConceptImages/Voucher.png" />
                        </a>
                        break;
                }
            </Body>
            </Card>
    </ListItem>
</AntList>
@if (!string.IsNullOrEmpty(Sections[2]?.SectionName))
{
    <br />
    <div style="grid-column: span 4; width: 100%;">
        <h4>@Sections[2].SectionName</h4>
    </div>
    <br />
}
<AntList Grid="grid" DataSource="@Sections[2].Items">
    <HeadContent>
    </HeadContent>
    <ListItem>
            <Card Bordered Title="@context.Title" Class="card-avec-image">
                <Body>
                @switch (context.Title)
                {
                    case "Edition":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Edition.jfif" />
                        </a>
                        break;

                    case "Enhanced":
                        <a href="@context.Link" style="color: white">
                            <Image Width="60px" Src="images/ConceptImages/Enhanced.jfif" />
