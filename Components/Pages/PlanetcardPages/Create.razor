@page "/planetcards/create"
@using Microsoft.EntityFrameworkCore
@using BalatroWikiApp.Models
@inject IDbContextFactory<BalatroWikiApp.Models.BalatroDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Planetcard</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Planetcard" OnValidSubmit="AddPlanetcard" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="nameplanet" class="form-label">NamePlanet:</label> 
                <InputText id="nameplanet" @bind-Value="Planetcard.NamePlanet" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Planetcard.NamePlanet" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="handplanet" class="form-label">HandPlanet:</label> 
                <InputText id="handplanet" @bind-Value="Planetcard.HandPlanet" class="form-control" aria-required="true"/> 
                <ValidationMessage For="() => Planetcard.HandPlanet" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/planetcards">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Planetcard Planetcard { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddPlanetcard()
    {
        using var context = DbFactory.CreateDbContext();
        context.Planetcards.Add(Planetcard);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/planetcards");
    }
}
