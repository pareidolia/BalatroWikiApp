@page "/tarotcards"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BalatroWikiApp.Models
@using BalatroWikiApp.Models
@implements IAsyncDisposable
@inject IDbContextFactory<BalatroWikiApp.Models.BalatroDBContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="tarotcards/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Tarotcards">
    <PropertyColumn Property="tarotcard => tarotcard.NameTarot" />
    <PropertyColumn Property="tarotcard => tarotcard.EffectTarot" />

    <TemplateColumn Context="tarotcard">
        <a href="@($"tarotcards/edit?id={tarotcard.Id}")">Edit</a> |
        <a href="@($"tarotcards/details?id={tarotcard.Id}")">Details</a> |
        <a href="@($"tarotcards/delete?id={tarotcard.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private BalatroDBContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
