@page "/othereffects/delete"
@using Microsoft.EntityFrameworkCore
@using BalatroWikiApp.Models
@inject IDbContextFactory<BalatroWikiApp.Models.BalatroDBContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>OtherEffect</h2>
    <hr />
    @if (othereffect is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Money</dt>
            <dd class="col-sm-10">@othereffect.Money</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Creation</dt>
            <dd class="col-sm-10">@othereffect.Creation</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Copy</dt>
            <dd class="col-sm-10">@othereffect.Copy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">imageOtherEffect</dt>
            <dd class="col-sm-10">@othereffect.imageOtherEffect</dd>
        </dl>
        <EditForm method="post" Model="othereffect" OnValidSubmit="DeleteOtherEffect" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(othereffect is null)">Delete</button> |
            <a href="/othereffects">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private OtherEffect? othereffect;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        othereffect = await context.OtherEffects.FirstOrDefaultAsync(m => m.Id == Id);

        if (othereffect is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteOtherEffect()
    {
        using var context = DbFactory.CreateDbContext();
        context.OtherEffects.Remove(othereffect!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/othereffects");
    }
}
