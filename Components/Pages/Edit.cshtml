@page
@model BalatroWikiApp.Components.Pages.EditModel

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Card.IdCard" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Card.NameCard" class="control-label"></label>
                <input asp-for="Card.NameCard" class="form-control" />
                <span asp-validation-for="Card.NameCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Card.FamilyCard" class="control-label"></label>
                <input asp-for="Card.FamilyCard" class="form-control" />
                <span asp-validation-for="Card.FamilyCard" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Card.IsEnhanced" /> @Html.DisplayNameFor(model => model.Card.IsEnhanced)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
